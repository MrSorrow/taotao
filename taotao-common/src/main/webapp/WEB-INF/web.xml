<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE web-app PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
                         "http://java.sun.com/dtd/web-app_2_3.dtd">
<web-app>
  <display-name>FortunePortlet</display-name>

  <description>Automated generated Application Wrapper</description>

  <servlet>
    <servlet-name>taotao-common</servlet-name>
    <display-name>taotao-common Portlet</display-name>
    <description>Generated Portlet Wrapper</description>
    <servlet-class>org.apache.pluto.core.PortletServlet</servlet-class>

    <init-param>
      <param-name>portlet-class</param-name>
      <param-value>guo.ping.taotao-common</param-value>
    </init-param>

    <init-param>
      <param-name>portlet-guid</param-name>
      <param-value>yourportlet.taotao-common</param-value>
    </init-param>
  </servlet>

  <servlet-mapping>
    <servlet-name>taotao-common</servlet-name>
    <url-pattern>/taotao-common/*</url-pattern>
  </servlet-mapping>

  <taglib>
    <taglib-uri>http://java.sun.com/portlet</taglib-uri>
    <taglib-location>/WEB-INF/tld/portlet.tld</taglib-location>
  </taglib>
</web-app>
